<h1>Movie Watch List</h1>

<h2>To Watch:</h2>

<ul>
    {{#each movies}} 
        {{#unless watched}} 
            {{movie_name}}
            <button class="change-state" data-id="{{id}}" data-newstate=true>Watched!</button>
        {{/unless}}
    <br> 
    {{/each}}
</ul>

<h2>Watched</h2>

<ul>
    {{#each movies}} 
        {{#if watched}} 
            {{movie_name}} 
        {{/if}}
        <br> 
    {{/each}}
</ul>

<h2>Add a Movie</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Movie Name:</label>
        <input type="text" id="mu" name="name">
    </div>

    <button type="submit">Add Movie</button>
</form>